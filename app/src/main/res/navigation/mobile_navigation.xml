<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/nav_home">

    <fragment
        android:id="@+id/nav_home"
        android:name="com.java.flightscheduler.ui.home.HomeFragment"
        android:label="@string/menu_home"
        tools:layout="@layout/fragment_home">

        <action
            android:id="@+id/action_HomeFragment_to_HomeSecondFragment"
            app:destination="@id/nav_home_second" />
    </fragment>
    <fragment
        android:id="@+id/nav_home_second"
        android:name="com.java.flightscheduler.ui.home.HomeSecondFragment"
        android:label="@string/home_second"
        tools:layout="@layout/fragment_home_second">
        <action
            android:id="@+id/action_HomeSecondFragment_to_HomeFragment"
            app:destination="@id/nav_home" />

        <argument
            android:name="myArg"
            app:argType="string" />
    </fragment>

    <fragment
        android:id="@+id/nav_flight_search"
        android:name="com.java.flightscheduler.ui.flightsearch.FlightSearchFragment"
        android:label="@string/text_flight_offers_lower"
        tools:layout="@layout/fragment_gallery" />

    <fragment
        android:id="@+id/nav_hotel_search"
        android:name="com.java.flightscheduler.ui.hotelsearch.HotelSearchFragment"
        android:label="@string/text_hotel_offers_lower"
        tools:layout="@layout/fragment_slideshow" />

    <fragment
        android:id="@+id/nav_itinerary_metrics"
        android:name="com.java.flightscheduler.ui.itinerarymetrics.ItineraryMetricsFragment"
        android:label="@string/text_itinerary_metrics"
        tools:layout="@layout/fragment_slideshow" />
</navigation>