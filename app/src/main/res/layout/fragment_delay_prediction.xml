<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:eaze="http://schemas.android.com/tools"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <import type="com.java.flightscheduler.utils.ParsingUtils"/>
        <variable
            name="predictionViewModel"
            type="com.java.flightscheduler.ui.delayprediction.predictionresults.DelayPredictionViewModel" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_prediction_header"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:background="@drawable/flight_search_header"
            android:layout_width="match_parent"
            android:layout_height="@dimen/flight_search_header_dimen">

            <ImageView
                android:layout_marginBottom="@dimen/margin_medium"
                android:id="@+id/img_flight_list_logo"
                android:contentDescription="@null"
                android:src="@drawable/icon_flight_plane_white"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_width="@dimen/flight_search_editor_dimen"
                android:layout_height="@dimen/flight_search_editor_dimen"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_marginBottom="@dimen/margin_medium"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/img_flight_list_logo"
                android:layout_marginEnd="@dimen/margin_xlarge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    tools:text="IST"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:id="@+id/txt_prediction_origin_iata"
                    android:textSize="26sp"
                    android:textColor="@color/grey_white_1000"
                    android:text="@{predictionViewModel.predictionSearch.origin.IATA}"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    tools:text="Istanbul"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:id="@+id/txt_prediction_origin_city"
                    android:textSize="20sp"
                    android:textColor="@color/grey_white_1000"
                    android:text="@{predictionViewModel.predictionSearch.origin.CITY}"
                    android:layout_marginStart="@dimen/margin_xlarge"
                    app:layout_constraintTop_toBottomOf="@+id/txt_prediction_origin_iata"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_marginBottom="@dimen/margin_medium"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@+id/img_flight_list_logo"
                android:layout_marginStart="@dimen/margin_xlarge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    tools:text="ADB"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:id="@+id/txt_prediction_destination_iata"
                    android:textSize="26sp"
                    android:textColor="@color/grey_white_1000"
                    android:text="@{predictionViewModel.predictionSearch.destination.IATA}"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    tools:text="Izmir"
                    android:id="@+id/txt_prediction_destination_city"
                    android:textSize="20sp"
                    android:textColor="@color/grey_white_1000"
                    android:text="@{predictionViewModel.predictionSearch.destination.CITY}"
                    app:layout_constraintTop_toBottomOf="@+id/txt_prediction_destination_iata"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:text="@{predictionViewModel.predictionSearch.carrierCode.ID + `-` + predictionViewModel.predictionSearch.flightNumber}"
                    android:id="@+id/txt_prediction_one_way"
                    android:layout_marginBottom="@dimen/margin_small"
                    android:layout_marginStart="@dimen/activity_horizontal_margin_extended"
                    android:textColor="@color/grey_white_1000"
                    android:textSize="15sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/txt_prediction_passengers"
                    android:layout_marginBottom="@dimen/margin_small"
                    android:layout_marginEnd="@dimen/activity_horizontal_margin_extended"
                    android:textColor="@color/grey_white_1000"
                    android:text="@{predictionViewModel.predictionSearch.departureTime}"
                    android:textSize="15sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    app:setDateParserText="@{predictionViewModel.predictionSearch.departureDate}"
                    android:id="@+id/txt_prediction_departure_date"
                    android:layout_marginBottom="@dimen/margin_small"
                    android:textColor="@color/grey_white_1000"
                    android:textSize="15sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <com.github.mikephil.charting.charts.PieChart
            android:layout_marginTop="@dimen/margin_large"
            app:layout_constraintTop_toBottomOf="@+id/layout_prediction_header"
            app:setPredictionResults="@{predictionViewModel.delayPrediction}"
            android:id="@+id/chartDelayPrediction"
            eaze:egHighlightStrength="1"
            eaze:egInnerPadding="0"
            eaze:egLegendHeight="0dp"
            android:layout_width="match_parent"
            android:layout_height="@dimen/detail_window_hotel"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:padding="@dimen/margin_small"
            android:layout_margin="@dimen/margin_medium"
            android:background="@drawable/layout_flight_legs_background"
            app:layout_constraintTop_toBottomOf="@+id/chartDelayPrediction"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:id="@+id/layout_prediction_amenities"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="@string/text_prediction_info"
                android:layout_marginBottom="@dimen/margin_small"
                android:id="@+id/txt_prediction_amenity_text"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:textColor="@color/grey_black_1000"
                tools:text="Amenities"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <View
                app:layout_constraintBottom_toTopOf="@+id/layout_prediction_info"
                app:layout_constraintTop_toBottomOf="@+id/txt_prediction_amenity_text"
                android:id="@+id/v_prediction_amenity_divider"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginTop="@dimen/margin_small"
                android:background="@color/grey_400"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>

            <LinearLayout
                android:orientation="vertical"
                android:weightSum="5"
                android:id="@+id/layout_prediction_info"
                app:layout_constraintTop_toBottomOf="@+id/v_prediction_amenity_divider"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_margin="@dimen/margin_small"
                    android:textColor="@color/grey_black_1000"
                    android:text="@{`Prediction ID : ` + predictionViewModel.delayPrediction.get(0).id }"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"/>
                <TextView
                    android:layout_margin="@dimen/margin_small"
                    android:textColor="@color/grey_black_1000"
                    app:setDisplayUnderscore="@{predictionViewModel.delayPrediction.get(0).result + ` : ` + predictionViewModel.delayPrediction.get(0).probability}"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"/>
                <TextView
                    android:layout_margin="@dimen/margin_small"
                    android:textColor="@color/grey_black_1000"
                    app:setDisplayUnderscore="@{predictionViewModel.delayPrediction.get(1).result + ` : ` + predictionViewModel.delayPrediction.get(1).probability}"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"/>
                <TextView
                    android:layout_margin="@dimen/margin_small"
                    android:textColor="@color/grey_black_1000"
                    app:setDisplayUnderscore="@{predictionViewModel.delayPrediction.get(2).result + ` : ` + predictionViewModel.delayPrediction.get(2).probability}"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"/>
                <TextView
                    android:layout_margin="@dimen/margin_small"
                    android:textColor="@color/grey_black_1000"
                    app:setDisplayUnderscore="@{predictionViewModel.delayPrediction.get(3).result + ` : ` + predictionViewModel.delayPrediction.get(3).probability}"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"/>
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>